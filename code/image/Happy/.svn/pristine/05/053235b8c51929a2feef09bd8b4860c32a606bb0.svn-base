<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <style>
    html,
    body {
        height: 100%;
        background-color: #f4f5f6;
    }

    .sky1 {
        width: 100%;
        height: 8px;
        background-color: #f4f5f6;
        border-bottom: 1px solid #e8e8e8;
    }

    .sky2 {
        width: 100%;
        height: 40px;
        line-height: 40px;
        font-size: 13px;
        color: #9d9d9d;
        background-color: #f4f5f6;
        border-top: 1px solid #e8e8e8;
        border-bottom: 1px solid #e8e8e8;
        box-sizing: border-box;
        padding-left: 15px;
    }

    .sky3 {
        width: 100%;
        height: 35px;
        background-color: #f4f5f6;
        border-top: 1px solid #e8e8e8;
        border-bottom: 1px solid #e8e8e8;
    }

    .cont {
        background-color: #fff;
        box-sizing: border-box;
        padding-left: 15px;
    }

    .t1 {
        height: 70px;
        line-height: 70px;
        width: 100%;
        font-size: 15px;
        color: #222;
        position: relative;
        border-bottom: 1px solid #e8e8e8;
        background-image: url(../image/default1.jpg);
        -webkit-background-size: ;
        background-size: 50px 50px;
        background-position: left center;
        background-repeat: no-repeat;
    }

    .t3 {
        height: 50px;
        line-height: 50px;
        width: 100%;
        font-size: 15px;
        color: #222;
        position: relative;
    }

    .t2 {
        height: 49px;
        line-height: 49px;
        width: 100%;
        font-size: 15px;
        color: #222;
        position: relative;
        border-bottom: 1px solid #e8e8e8;
    }

    .btn {
        height: 49px;
        line-height: 49px;
        width: 100%;
        font-size: 15px;
        color: #222;
        position: relative;
        border-bottom: 1px solid #e8e8e8;
    }

    .r {
        position: absolute;
        right: 0;
        bottom: 0;
        box-sizing: border-box;
        padding-right: 16px;
        color: #999;
        font-size: 13px;
        line-height: 49px;
        text-align: center;
    }

    .close {
        width: 85px;
        height: 49px;
        background-image: url(../image/my/close.png);
        background-repeat: no-repeat;
        background-size: 50px 33px;
        background-position: center center;
        position: absolute;
        right: 0;
        bottom: 0;
        box-sizing: border-box;
        padding-right: 16px;
        color: #999;
        font-size: 13px;
        line-height: 49px;
        text-align: center;
    }

    .active .close {
        width: 85px;
        height: 49px;
        background-image: url(../image/my/open.png);
        background-repeat: no-repeat;
        background-size: 50px 33px;
        background-position: center center;
        position: absolute;
        right: 0;
        bottom: 0;
        box-sizing: border-box;
        padding-right: 16px;
        color: #999;
        font-size: 13px;
        line-height: 49px;
        text-align: center;
    }

    .arrow {
        width: 40px;
        height: 50px;
        background-image: url(../image/my/arrow.png);
        background-repeat: no-repeat;
        background-size: 6px 12px;
        background-position: center center;
    }

    .arrow_t1 {
        width: 40px;
        height: 70px;
        background-image: url(../image/my/arrow.png);
        background-repeat: no-repeat;
        background-size: 6px 12px;
        background-position: center center;
    }

    .logout {
        width: 100%;
        height: 50px;
        line-height: 50px;
        text-align: center;
        font-size: 15px;
        color: #f85959;
        background-color: #fff;
        font-weight: 600;
    }

    .text {
        font-size: 13px;
        color: #a0a0a0;
        float: right;
        padding-right: 33px;
        box-sizing: border-box;
    }

    .text1 {
        font-size: 13px;
        color: #f85959;
        float: right;
        padding-right: 33px;
        box-sizing: border-box;
    }

    .highlight {
        opacity: 0.7;
    }
    </style>
</head>

<body>
    <div class="sky1"></div>
    <div class="cont">
        <div class="t1" id="avatar" tapmode="highlight" onclick="fnGetAvatar()">
            <div class="r arrow_t1"></div>
        </div>
        <div class="t2">昵称
            <div class="text"></div>
            <div id="nick" class="text">我是昵称</div>
            <div class="r arrow"></div>
        </div>
        <div class="t2" onclick="chosseGende()">性别
            <div class="text"></div>
            <div id="gender" class="text">我是性别</div>
            <div class="r arrow"></div>
        </div>
        <div class="t2" onclick="chosseBirthday()">生日
            <div class="text"></div>
            <div id="birthday" class="text">我是生日</div>
            <div class=" r arrow "></div>
        </div>
        <div class="t2 ">
            签名
            <div id="signed " class="text ">这个人很懒，什么都没留下</div>
            <div class="r arrow "></div>
        </div>
        <div class="t3 ">
            手机号
            <div id="phone " class="text1 ">绑定手机号</div>
            <div class="r arrow "></div>
        </div>
    </div>
    <div class="sky2 ">账号绑定</div>
    <div class="cont " id="content ">
        <div class="btn ">微信
            <div class="close "></div>
        </div>
        <div id="qqBind " class="btn" tapmode="highlight" onclick="fnQQBind()">腾讯QQ
            <div class="close "></div>
        </div>
        <div class="btn ">新浪微博
            <div class="close "></div>
        </div>
        <div class="btn ">腾讯微博
            <div class="close "></div>
        </div>
        <div style="border-bottom: none; " class="btn ">人人网
            <div class="close "></div>
        </div>
    </div>
    <div class="sky3 "></div>
    <div class="logout " tapmode="highlight " onclick="fnLogout() ">退出登录</div>
    <div class="sky3 "></div>
</body>
<script type="text/javascript " src="../js/api.js "></script>
<script type="text/javascript " src="../js/SHA1.js "></script>
<script type="text/javascript " src="../js/common.js "></script>
<script type="text/javascript ">
apiready = function() {
    fnInitListener();

    fnInit();

    fnInitQQBind();

};

function fnInitListener() {
    api.addEventListener({
        name: 'event_logout'
    }, function(ret, err) {
        fnChangeUserInfo();
    });
};

function fnChangeUserInfo() {
    avatar.src = $api.getStorage('avatar') || '../image/default1.jpg';
    nick.innerHTML = $api.getStorage('nick') || '秦帅哥';
};

var avatar, userId, qqBind;
var qq;
var nick, gender, birthday, signed, phone;

function fnInit() {
    userId = $api.getStorage('loginInfo').userId;
    accessToken = $api.getStorage('loginInfo').id;

    avatar = $api.byId('avatar');
    qqBind = $api.byId('qqBind');

    qq = api.require('qq');

    nick = $api.byId('nick'),
        gender = $api.byId('gender'),
        birthday = $api.byId('birthday'),
        signed = $api.byId('signed');


    var gendertr = $api.getStorage('gendertr') || '保密';
    gender.innerHTML = gendertr;

    var birthStr = $api.getStorage('birthStr') || '暂无';
    birthday.innerHTML = birthStr;

};

function fnInitQQBind() {
    if ($api.getStorage('qqLogin_' + userId)) {
        $api.addCls(qqBind, 'active');
        qqBindStatus = true;
    } else {
        $api.removeCls(qqBind, 'active');
    }
};

// 相册  拍照
function fnGetAvatar() {
    var buttons = ['拍照', '相册'];
    api.actionSheet({
        title: '请选择',
        cancelTitle: '取消',
        buttons: buttons
    }, function(ret, err) {

        if (buttons.length + 1 == ret.buttonIndex) {
            return;
        }
        var types = ['camera', 'album'];
        api.getPicture({
            sourceType: types[ret.buttonIndex - 1],
            quality: 30,
            targetWidth: 100,
            targetHeight: 100,
        }, function(ret, err) {

            if (ret.data) {
                avatar.style.backgroundImage = 'url(' + ret.data + ')';

            }

        });
    });
};

function fnLogout() {
    $api.rmStorage('loginInfo');
    api.sendEvent({
        name: 'event_logout'
    });

    api.execScript({
        name: 'root',
        frameName: 'my_frame',
        // 参数
        // script: 'fnRealDownload("' + JSON.stringify(selects) + '");'
        script: 'fnLoginiIfo(0);'

    });

    api.closeWin();
};

var qqBindStatus = false;

function fnQQBind() {
    qqBindStatus = !qqBindStatus;

    if (qqBindStatus) {
        api.showProgress({
            title: '正在前往QQ',
            modal: true
        });

        qq.login(function(ret, err) {
            api.hideProgress();
            if (ret.status) {
                qq.getUserInfo(function(ret, err) {
                    if (ret.status) {
                        $api.setStorage('avatar', ret.info.figureurl_qq_2);
                        $api.setStorage('nick', ret.info.nickname);

                        api.sendEvent({
                            name: 'event_logout'
                        });
                    }
                });

                fnBindQQUser(ret.openId);
            }
        });
    } else {
        fnUnBindQQUser();
    }
};

var now = Date.now();
var appKey = SHA1("A6918573369588 " + "UZ " + "20C93719-0DE5-8C9B-2F05-36D9BB835C02 " + "UZ " + now) + ". " + now;

function fnBindQQUser(qqId) {
    api.ajax({
        url: 'https://d.apicloud.com/mcm/api/user/' + userId,
        method: 'post',
        timeout: 10,
        dataType: 'json',
        headers: {
            "X-APICloud-AppId ": "A6918573369588 ",
            "X-APICloud-AppKey ": appKey,
            "Content-Type ": "application/json ",
            "authorization ": accessToken
        },
        data: {
            body: JSON.stringify({
                qqId: qqId,
                '_method': 'put'
            })
        }
    }, function(ret, err) {
        alert(JSON.stringify(ret) + ',' + JSON.stringify(err));
        $api.setStorage('qqLogin_' + userId, 1);
        fnInitQQBind();
    });
};

function fnUnBindQQUser() {
    api.ajax({
        url: 'https://d.apicloud.com/mcm/api/user/' + userId,
        method: 'post',
        timeout: 10,
        dataType: 'json',
        headers: {
            "X-APICloud-AppId ": "A6918573369588 ",
            "X-APICloud-AppKey ": appKey,
            "Content-Type ": "application/json ",
            "authorization ": accessToken
        },
        data: {
            body: JSON.stringify({
                qqId: '',
                '_method': 'put'
            })
        }
    }, function(ret, err) {
        alert(JSON.stringify(ret) + ',' + JSON.stringify(err));
        $api.rmStorage('qqLogin_' + userId);
        fnInitQQBind();
    });
};

// 选择性别
function chosseGende() {
    var gendeArr = ['男', '女', '保密', ];
    api.actionSheet({
        title: '请选择性别',
        cancelTitle: '取消',
        buttons: gendeArr
    }, function(ret, err) {
        var index = ret.buttonIndex;
        if (index == gendeArr.length + 1) {

        } else {

            var gendertr = gendeArr[index - 1];
            gender.innerHTML = gendertr;
            $api.setStorage('gendertr', gendertr);

        }
    });
}

function chosseBirthday() {
    var birth = $api.getStorage('birthStr') || '2000-01-01';

    api.openPicker({
        type: 'date_time',
        date: birth,
        title: '选择时间'
    }, function(ret, err) {
        if (ret) {
            alert(JSON.stringify(ret));
            var birthStr = ret.year + '-' +fngetDouble(ret.month) + '-' + fngetDouble(ret.day);
            birthday.innerHTML = birthStr;
            $api.setStorage('birthStr', birthStr);
        } else {
            alert(JSON.stringify(err));
        }
    });
}
function fngetDouble(value){

    return value >=10 ?value:'0'+value;
}


</script>

</html>